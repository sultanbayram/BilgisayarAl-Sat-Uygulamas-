<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF7E0"
    tools:context=".MesajlarimActivity">


    <LinearLayout
        android:id="@+id/amenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mesajlar"
            android:background="#B8959B"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mesajlar Sayfasına ulaşılamıyor"
            android:textStyle="bold"

            android:padding="15dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/anaMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/pressed"
                android:drawableTop="@drawable/ic_launcher_foreground"
                android:padding="3dp"
                android:paddingBottom="8dp"
                android:text="Anasayfaya dön"
                android:textColor="#0F3057"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>