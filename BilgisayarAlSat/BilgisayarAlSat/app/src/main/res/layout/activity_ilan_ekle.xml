<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF7E0"
    android:onClick="paylas"
    android:orientation="vertical"
    tools:context=".IlanEkleActivity">
<LinearLayout
        android:layout_width="fill_parent"
        android:background="#EFF7E0"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:onClick="gorselSec"
                app:srcCompat="@drawable/gorsel"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/textView"
                android:background="#B8959B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="120dp"
                android:gravity="center"
                android:text="Ilan Bilgilerini Giriniz"
                android:textColor="#203040"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="193dp" />

            <EditText
                android:id="@+id/ilanBaslikEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="İlan Başlığını Giriniz"
                android:minHeight="48dp"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="253dp" />

            <EditText
                android:id="@+id/ilanAciklamaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:hint="İlan Açıklamasını Giriniz"
                android:minHeight="38dp"
                android:textColorHint="#203040"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck"
                tools:layout_editor_absoluteY="343dp" />
            <EditText
                android:id="@+id/telefonBilgiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="İletişim No Giriniz"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/ilanFiyatEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fiyat Giriniz"
                android:minHeight="38dp"
                android:textColorHint="#203040"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck"
                tools:layout_editor_absoluteY="298dp" />

            <EditText
                android:id="@+id/markaBilgiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PC Markasini Giriniz"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/ramBilgiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RAM Giriniz"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />



            <EditText
                android:id="@+id/islemciBilgiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="İşlemci Giriniz"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/eboyutuBilgiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ekran Boyutu Giriniz"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/cozunurlukBilgiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Çözünürlük Giriniz"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/modelBilgiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PC Modelini Giriniz"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/yilBilgiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PC Yılını Giriniz"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/durumBilgiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PC Durumu Giriniz"
                android:textColorHint="#203040"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="paylas"
                android:text="Paylaş" />



        </LinearLayout>
</LinearLayout>
    </ScrollView>

